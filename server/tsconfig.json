{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["esnext"],
    "allowJs": true,

    "outDir": "dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./node_modules/@types"],
  "allowSyntheticDefaultImports": true
}
